{
  "name": "pym",
  "version": "0.1.0",
  "author": "Alexej Yaroshevich <zxqfox@gmail.com> (http://github.com/zxqfox)",
  "description": "Module-assistant to create systems based on plugins",
  "keywords": [
    "plugin",
    "pluggable",
    "package",
    "module",
    "system",
    "architect"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/zxqfox/pym"
  },
  "bugs": {
    "url": "https://github.com/zxqfox/pym/issues"
  },
  "engines": {
    "node": ">= 0.10"
  },
  "main": "index.js",
  "files": [
    "index.js",
    "lib",
    "LICENSE"
  ],
  "dependencies": {
    "ym": "0.1.x"
  },
  "devDependencies": {
    "jscs": "1.8.x",
    "jscs-jsdoc": "0.2.x",
    "jshint": "~2.5.10",
    "mocha": "~2.0.1"
  },
  "scripts": {
    "cov-deps": "npm i istanbul mocha-istanbul",
    "cov-clean": "rm -rf lib-cov; rm -rf html-report",
    "cov-build": "istanbul instrument --output lib-cov --no-compact --variable global.__coverage__ lib",
    "cov": "npm run cov-clean && npm run cov-build && PYM_COVER=1 mocha -R mocha-istanbul",
    "lint": "jshint lib test && jscs lib test",
    "test": "npm run lint && mocha",
    "travis": "npm run test"
  },
  "license": "MIT"
}
